<h1><%= action %> track</h1>

<form action="<%= url %>" method="post">
  <label for="track_name">Name</label>
  <input type="text" name="track[track_name]" id="track_name" value="<%= track.track_name %>">
  <br>
  <label for="album">Album</label>
  <select name="track[album_id]" selected="<%= track.album %>">
    <% albums.each do |album| %>
      <option value="<%= album.id %>"><%= album.album_name %></option>
    <% end %>
  </select>
  <br>
  <label for="lyrics">Lyrics</label><br>
  <textarea name="track[lyrics]" id="lyrics" value="<%= track.lyrics %>" columns="10">
  </textarea>

  <% if action == "Edit" %>
    <input type="hidden" name="_method" value="put">
  <% end %>
  <br>

  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <input type="submit" value="<%= action %>">
</form>