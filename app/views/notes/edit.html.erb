<h1>Edit note</h1>

<form action="<%= track_note_url(@track_id, @note.id) %>" method="post">
  <label name="message">Message</label>
  <br>
  <textarea name="note[message]" id="message" value="<%= @note.message %>" rows="6"></textarea>

  <input type="hidden" name="note[track_id]" value="<%= @track_id %>">
  <input type="hidden" name="_method" value="put">
  <br>

  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <input type="submit" value="Update">
</form>