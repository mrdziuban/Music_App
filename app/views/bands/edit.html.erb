<h1>Edit <%= @band.band_name %></h1>

<form action="<%= band_url(@band.id) %>" method="post">
  <label for="band_name">Name</label>
  <input type="text" name="band[band_name]" id="band_name" value="<%= @band.band_name %>">
  <input type="hidden" name="_method" value="put">
  <br>
  <input type="submit" value="Update">
</form>

<%= flash[:notices] unless flash[:notices].nil? %>