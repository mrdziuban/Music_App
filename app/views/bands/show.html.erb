<h1><%= @band.band_name %></h1>

<h4>Albums</h4>
<ul>
  <% @band.albums.each do |album| %>
    <li><%= link_to "#{album.album_name}", album_url(album.id) %></li>
  <% end %>
</ul>

<% if @current_user.admin %>
  <%= link_to "Edit this band", edit_band_url(@band.id) %>
  <br>
  <%= button_to "Delete this band", band_url(@band.id), method: :delete %>
<% end %>
<%= link_to "All bands", bands_url %>